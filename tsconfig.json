{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "built/",
        "noLib": false
    },
    "include": [
        "src/**/*",
        "test/**/*.ts"
    ],    
    "exclude": [
        "node_modules",
        "typings/browser/",
        "typings/browser.d.ts",
        "built/"
    ]
}